package BitCoSi

import (
	"crypto/sha256"
	"encoding/hex"
	"fmt"
	"github.com/dedis/cothority/lib/hashid"
	"github.com/dedis/cothority/lib/proof"
	"log"
	"net"
)

type KeyBlock struct {
	Magic      [4]byte
	BlockSize  uint32
	HeaderHash string
	Header
	TransactionList
}

type KeyHeader struct {
	LeaderId   net.IP
	PublicKey  string
	MerkleRoot string
	Parent     string
	nonce      uint32
}

func NewBlock(transactions TransactionList, header Header) (key KeyBlock) {
	trb := new(TrBlock)
	trb.Magic = [4]byte{0xD9, 0xB4, 0xBE, 0xF9}
	trb.HeaderHash = hash(header)
	trb.TransactionList = transactions
	trb.BlockSize = 0
	trb.Header = header
	return *trb
}

func NewHeader(transactions TransactionList, parent string, IP net.IP, key string) (hd KeyHeader) {
	hdr := new(Header)
	hdr.LeaderId = IP
	hdr.PublicKey = key
	hdr.Parent = parent
	nonce = 3
	hdr.MerkleRoot = calculate_root(transactions)
	return *hdr
}

func (trb *TrBlock) Print() {
	log.Println("Header:")
	log.Printf("Leader %v", trb.LeaderId)
	log.Printf("Pkey %v", trb.PublicKey)
	log.Printf("Parent_Tr %v", trb.ParentTr)
	log.Printf("Parent_Key %v", trb.ParentKey)
	log.Printf("Merkle %v", trb.MerkleRoot)
	trb.TransactionList.Print()

	log.Println("Rest:")
	log.Printf("Hash %v", trb.HeaderHash)

	return
}
